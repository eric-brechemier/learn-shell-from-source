PATH="$(dirname $0):$(dirname $(command -v dirname))"

# A SIMPLE COMMAND IS:

# a command name
cmd_name

# followed with OPTIONAL redirections
cmd_name cmd_suffix

# OR a sequence of OPTIONAL variable assignments and redirections,
# in any order
cmd_prefix

# followed with an OPTIONAL command word
cmd_prefix cmd_word

# followed with OPTIONAL redirections
cmd_prefix cmd_word cmd_suffix
